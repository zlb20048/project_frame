<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 布局均为wrap_content -->
    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 布局均为wrap_content -->
    <style name="layout_width_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_btn_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/main_btn_bg_d</item>
    </style>

    <style name="menu_main_btn_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="person_info_style">
        <item name="android:textSize">18sp</item>
    </style>

</resources>